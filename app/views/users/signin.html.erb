  <div class="row sticky-top-padding">
    <div class="offset-4 col-4">

    <% if flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <h1 class="text-center">SoccerInfo</h1>

    <%= form_with(model: @user) do |form| %>

    <div class="mb-3">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', 'aria-describedby': 'nameHelp' %>
        <div id="nameHelp" class="form-text text-center">You only need your name to signup/signin, mate.</div>
    </div>

    <div class="actions sign-up-div text-center">
        <%= form.submit 'Sign In', class: "btn" %>
    </div>
    <% end %>

    <%= link_to 'SignUp', users_signup_path %>

    </div>
  </div>