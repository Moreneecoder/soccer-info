<div class="row sticky-top-padding">
    <div class="offset-4 col-4">

     <%= flash_message %>

    <h1 class="text-center">SoccerInfo</h1>

    <%= form_with(model: @article) do |form| %>

    <div class="mb-3">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
        <%= form.label :text, class: 'form-label' %>
        <%= form.text_area :text, class: 'form-control', 'rows': 5, required: true %>
    </div>

    <div class="mb-3">
        <%= form.label :image, class: 'form-label' %>
        <%= form.file_field :image, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
        <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: "Select Category"}, class: 'form-control', required: true %>
    </div>

    <div class="actions sign-up-div text-center">
        <%= form.submit 'Create Article', class: "btn" %>
    </div>
    <% end %>

    </div>
  </div>